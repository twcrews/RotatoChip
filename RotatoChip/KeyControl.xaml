<UserControl x:Class="Crews.Utility.RotatoChip.KeyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crews.Utility.RotatoChip"
             mc:Ignorable="d" VerticalAlignment="Center" Margin="5,0,0,0" >
    <Border Background="#FF979797" CornerRadius="5">
        <TextBlock
            x:Name="KeyTextBlock"
            x:FieldModifier="private"
            Foreground="#222"
            FontWeight="Medium"
            Margin="8,3"
            VerticalAlignment="Center"
            />
    </Border>
</UserControl>
